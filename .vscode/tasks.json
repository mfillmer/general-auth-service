{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run api",
            "type": "shell",
            "options": {
                "env": {
                    "FLASK_ENV": "development",
                    "FLASK_APP": "app",
                    "FLASK_RUN_PORT": "5000"
                }
            },
            "command": "cd ${workspaceFolder} && python -m flask run",
            "problemMatcher": []
        },
        {
            "label": "run pytest on api",
            "type": "shell",
            "options": {
                "env": {}
            },
            "command": "cd ${workspaceFolder} && python -m pytest",
            "problemMatcher": []
        },
        {
            "label": "setup api database",
            "type": "shell",
            "options": {
                "env": {
                    "FLASK_ENV": "development",
                    "FLASK_APP": "app"
                }
            },
            "command": "cd ${workspaceFolder} && python -m flask init-db",
            "problemMatcher": []
        },
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "python",
            "dockerBuild": {
                "tag": "boilerplateflaskapp:latest",
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build"
            ],
            "dockerRun": {
                "env": {
                    "FLASK_APP": "app/__init__.py"
                }
            },
            "python": {
                "args": [
                    "run",
                    "--no-debugger",
                    "--no-reload",
                    "--host",
                    "0.0.0.0",
                    "--port",
                    "5000"
                ],
                "module": "flask"
            }
        }
    ]
}